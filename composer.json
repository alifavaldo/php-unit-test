{
  "name": "alifavaldo/belajar-php-unit-test",
  "type": "project",
  "autoload": {
    "psr-4": {
      "Alifavaldo\\Test\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Alifavaldo\\Test\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Alif Avaldo",
      "email": "alifavaldo@gmail.dom"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.5"
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "test:product": "phpunit --configuration phpunit.xml --testsuite product",
    "test:counter": "phpunit --configuration phpunit.xml --testsuite counter"
  }
}
